<header>
  <div class="container">
    <%= link_to t("header.logo"), root_path, id: "logo"%>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to t("header.menu.home"), root_path %></li>
      <li><%= link_to t("header.menu.help"), help_path %></li>
      <% if logged_in? %>
        <li><%= link_to t("header.menu.users"), "#" %></li>
        <li class="dropdown">
          <a class="dropdown-toggle" href="#" data-toggle="dropdown">
            <%= t "header.menu.account" %> <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("header.menu.profile"), current_user %></li>
            <li><%= link_to t("header.menu.setting"), "#" %></li>
            <li class="divider" role="separator"></li>
            <li>
              <%= link_to t("header.menu.logout"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t("header.menu.login"), login_path %></li>
      <% end %>
    </ul>
  </div>
</header>
